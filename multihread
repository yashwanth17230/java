import.java.util.Random;
class random implements runnable
{
  public void runnable
  {
    Random ra=new Random();
    for(i=0;i<10;i++)
    {
      int r=ra.nextInt(100);
      System.out.println("random number="+ra);
      square s=new square();
      s.start;
      cube c=new cube();
      c.start;
      try
      {
        Thread.sleep(1000);
      }
      catch(InterrputedExpection ex)
      {
        System.out.println(ex);
      }
    }
  }
}
class square extends Thread
{
  int x;
  public square(int r)
  {
    x=r;
  }
  public void run()
  {
    int sq;
    sq=x*x;
    System.out.println("square of"+x+"="+sq);
  }
}
class cube extends Thread
{
  int x;
  public cube(int r)
  {
    x=r;
  }
  public void run()
  {
    int cu;
    cu=x*x*x;
    System.out.println("cube of"+x+"="+cu);
  }
}
public class multithread
{
  public static void main(String args[]);
  {
    random n=new random();
    Thread t=new Thread();
    t.start;
  }
}
